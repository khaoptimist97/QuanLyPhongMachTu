@model IEnumerable<MvcAppMain.Models.Thuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý Thuốc</h2>
<br />
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Thuốc
        </div>
        <div class="card-body">
            <div class="row">
                <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
                    @using (Html.BeginForm("Create", "Thuocs", FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-primary" name="themmoi">THÊM MỚI</button>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:20%">Tên thuốc</th>
                            <th style="width:10%">Số lượng</th>
                            <th style="width:10%">Đơn giá</th>
                            <th style="width:10%">Đơn vị</th>
                            <th style="width:20%">Cách dùng</th>
                            <th style="width:30%">Chức năng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr style="text-align:center">
                            <th style="width:20%">Tên thuốc</th>
                            <th style="width:10%">Số lượng</th>
                            <th style="width:10%">Đơn giá</th>
                            <th style="width:10%">Đơn vị</th>
                            <th style="width:20%">Cách dùng</th>
                            <th style="width:30%">Chức năng</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenThuoc</td>
                                <td>@item.SoLuong</td>
                                <td>@item.DonGia</td>
                                <td>@item.DonVi.TenDonVi</td>
                                <td>@item.CachDung.TenCachDung</td>
                                <td style="text-align:center">
                                    @using (Html.BeginForm())
                                    {
                                        <button class="btn glyphicon glyphicon-info" style="width:120px;"> @Html.ActionLink("Xem chi tiết", "Details", new { id = item.ID_Thuoc })</button>
                                        <button class="btn" style="width:120px;">@Html.ActionLink("Sửa", "Edit", new { id = item.ID_Thuoc })</button>
                                        <button class="btn" style="width:120px;">@Html.ActionLink("Xóa", "Delete", new { id = item.ID_Thuoc })</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>
