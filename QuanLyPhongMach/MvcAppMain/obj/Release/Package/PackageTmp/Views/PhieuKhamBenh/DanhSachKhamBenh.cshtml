@model IEnumerable<MvcAppMain.Models.PhieuKhamBenh>

@{
    ViewBag.Title = "DanhSachKhamBenh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <legend>
        @if (Session["Roles"].Equals("admin"))

    {
        <h2>DanhSachKhamBenh</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
       
        using (Html.BeginForm("DanhSachKhamBenh", "PhieuKhamBenh", FormMethod.Get))
        {
            <div>
                Ngay Kham: @Html.TextBox("date", string.Format("{0:MMM dd yyyy }", (DateTime)ViewBag.date), new { @class = "datefield", type = "date" })
                <input type="submit" value="Search" />
            </div>
        }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HoSoBenhNhan.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoSoBenhNhan.GioiTinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoSoBenhNhan.NamSinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoSoBenhNhan.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayKham)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSoBenhNhan.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSoBenhNhan.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSoBenhNhan.NamSinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSoBenhNhan.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayKham)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_BenhNhan }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_BenhNhan }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_BenhNhan })
                </td>
            </tr>
    }

        </table>
}
else
{
    <text>
        @Session["Username"].ToString()! You should be an admin to have valid to view this page
    </text>
}
    </legend>
            </fieldset>
