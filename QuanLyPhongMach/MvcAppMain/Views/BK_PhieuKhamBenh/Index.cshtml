@model IEnumerable<MvcAppMain.Models.BK_PhieuKhamBenh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Phiếu Khám Bệnh
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:20%">Phiếu Khám(ID)</th>
                            <th style="width:20%">Loại bệnh(ID)</th>
                            <th style="width:20%">Ngày khám</th>
                            <th style="width:20%">Triệu chứng</th>
                            <th style="width:20%">Phiếu tiếp nhận(ID)</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr style="text-align:center">
                            <th style="width:20%">Phiếu Khám(ID)</th>
                            <th style="width:20%">Loại bệnh(ID)</th>
                            <th style="width:20%">Ngày khám</th>
                            <th style="width:20%">Triệu chứng</th>
                            <th style="width:20%">Phiếu tiếp nhận(ID)</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID_PhieuKham</td>
                                <td>@item.ID_Benh</td>
                                <td>@item.NgayKham</td>
                                <td>@item.TrieuChung</td>
                                <td>@item.IDPhieuTN</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>