@model IEnumerable<MvcAppMain.Models.BK_CT_PhieuKhamBenh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Chi tiết khám
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:20%">Phiếu Khám(ID)</th>
                            <th style="width:20%">Thuốc(ID)</th>
                            <th style="width:20%">Số lượng lấy</th>
                            <th style="width:20%">Đơn giá bán</th>
                            <th style="width:20%">Thành tiền</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr style="text-align:center">
                            <th style="width:20%">Phiếu Khám(ID)</th>
                            <th style="width:20%">Thuốc(ID)</th>
                            <th style="width:20%">Số lượng lấy</th>
                            <th style="width:20%">Đơn giá bán</th>
                            <th style="width:20%">Thành tiền</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID_PhieuKham</td>
                                <td>@item.ID_Thuoc</td>
                                <td>@item.SoLuongThuocLay</td>
                                <td>@item.DonGiaBan</td>
                                <td>@item.ThanhTien</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>