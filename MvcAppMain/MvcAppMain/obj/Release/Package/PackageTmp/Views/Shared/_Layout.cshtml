<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">*@
    <!--Dùng bootstrap mặc định mới dropdown đc nhưng giao diện sẽ bị hỏng, dùng boostrap riêng của layout thì ko dropdown đc -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <img class="img-responsive" src="~/Content/Images/background-login.jpg" style="width:100%; height:200px" />



    <nav class="navbar navbar-inverse">
        <div class="container-fluid">

            <div class="navbar-header">
                <button class="navbar-toggle" aria-expanded="true" type="button" data-target="#bs-example-navbar-collapse-2" data-toggle="collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/User/Login"><i class="fa fa-home fa-5"></i></a>
            </div>

            @*<a href="#"><i class="fa fa-home fa-5"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
            <div class="navbar-collapse collapse in" id="bs-example-navbar-collapse-2" aria-expanded="true">

                <ul class="nav navbar-nav">
                    <li class="active">
                        <a class="nav-link" href="#">Trang chủ<span class="sr-only">(current)</span></a>
                    </li>


                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Chức năng<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">


                            <li><a href="~/HoSoBenhNhan/Create">Đăng ký thông tin bệnh nhân</a></li>
                            <li><a href="~/Thuoc/Index">Thông tin thuốc</a></li>

                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Danh sách báo cáo<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/PhieuKhamBenh/DanhSachKhamBenh">Lập danh sách khám bệnh</a></li>
                            <li><a href="~/PhieuKhamBenh/PhieuKhamBenh">Lập phiếu khám bệnh</a></li>
                            <li><a href="~/PhieuKhamBenh/DanhSachBenhNhan">Tra cứu bệnh nhân</a></li>
                            @if (Session["Roles"].Equals("admin"))
                            {
                                <li class="divider"></li>
                                <li><a href="~/ThayDoiQuyDinh/Index">Thay đổi quy định</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                @*<form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Tìm kiếm">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Tìm kiếm</button>
                    </form>*@
                <ul class="nav navbar-nav navbar-right" style="padding-left: 30px">
                    @if (Session["Username"] != null)
                    {
                        <li><a href="~/User/Login"><span class="glyphicon glyphicon-log-in"> </span> Hi! @Session["Username"].ToString()</a></li>

                    }


                    <li><a href="~/User/Create"><i class="fa fa-user-plus"></i> Đăng ký</a></li>
                </ul>

            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-sm-2">
            <div class="list-group">
                <h5>Chức năng</h5>
                <a href="~/HoSoBenhNhan/Create" class="list-group-item">Đăng ký thông tin bệnh nhân</a>
                <a href="~/Thuoc/Index" class="list-group-item">Thông tin thuốc</a>
            </div>
            <br />
            <div class="list-group">
                <h5>Danh sách báo cáo</h5>
                <a href="~/PhieuKhamBenh/DanhSachKhamBenh" class="list-group-item" style="padding-left: 10px; padding-right: 10px">Lập danh sách khám bệnh</a>
                <a href="~/PhieuKhamBenh/PhieuKhamBenh" class="list-group-item">Lập phiếu khám bệnh</a>
                <a href="~/PhieuKhamBenh/DanhSachBenhNhan" class="list-group-item">Tra cứu bệnh nhân</a>
                @if (Session["Roles"].Equals("admin"))
                {
                    <a class="list-group-item dropdown-toggle" data-toggle="dropdown" href="#">Lập báo cáo tháng<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="~/HoaDon/BaoCaoDoanhThu" class="list-group-item active">Báo cáo doanh thu theo ngày</a></li>
                        <li><a href="~/CT_PhieuKhamBenh/BaoCaoSuDungThuoc" class="list-group-item">Báo cáo sử dụng thuốc</a></li>
                    </ul>
                }
            </div>
        </div>

        <div class="col-sm-10">

            @RenderBody()

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>

</html>
