@model IEnumerable<MvcAppMain.Models.BK_HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Phiếu thu tiền
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:20%">ID</th>
                            <th style="width:20%">Phiếu khám(ID)</th>
                            <th style="width:20%">Tiền khám</th>
                            <th style="width:20%">Tiền thuốc</th>
                            <th style="width:20%">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr style="text-align:center">
                            <th style="width:20%">ID</th>
                            <th style="width:20%">Phiếu khám(ID)</th>
                            <th style="width:20%">Tiền khám</th>
                            <th style="width:20%">Tiền thuốc</th>
                            <th style="width:20%">Tổng tiền</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID_HoaDon</td>
                                <td>@item.ID_PhieuKham</td>
                                <td>@item.TienThuoc</td>
                                <td>@item.TienKham</td>
                                <td>@item.TongTien</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>