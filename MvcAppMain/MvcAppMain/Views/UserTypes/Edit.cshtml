@model MvcAppMain.Models.UserType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.0);
        padding: 30px 10px;
        margin-top: 5vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
    }

    h2 {
        text-align: center;
    }

    placeholder {
        font-style: italic;
    }
</style>
<h2>Sửa Thông Tin Tài Khoản</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-horizontal" style="padding-left:50px;  ">
                                <div class="form-horizontal">

                                    <hr />
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.ID)

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TypeName)
                                            @Html.ValidationMessageFor(model => model.TypeName)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <button type="button" onclick="window.location.href='@Url.Action("Index","UserTypes")'" class="btn btn-default">Quay Lại</button>
                                        <button type="submit"  class="btn btn-default">Xác Nhận</button>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>
}